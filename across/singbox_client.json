{
  "log": {
    "disabled": false,
    "level": "info"
  },
  "dns": {
    "servers": [
      {
        "address": "tls://8.8.8.8",
        "strategy": "ipv4_only",
        "detour": "proxy_out"
      }
    ]
  },
  "inbounds": [
    {
      "tag": "tun_main",
      "type": "tun",
      "address": [
        "10.10.10.0/30"
      ],
      "mtu": 1500,
      "auto_route": true,
      "strict_route": true,
      "stack": "system"
    }
  ],
  "outbounds": [
    {
      "tag": "direct_out",
      "type": "direct"
    },
    {
      "tag": "proxy_out",
      "type": "vless",
      "server": "104.19.0.0",
      "server_port": 8443,
      "uuid": "82d73bdf-0da7-478c-87d5-6f4cd72fc2fd",
      "tls": {
        "enabled": true,
        "server_name": "chat.nireus.cc",
        "insecure": false
      },
      "transport": {
        "type": "ws",
        "path": "/deepseek",
        "headers": {
          "host": "chat.nireus.cc"
        }
      }
    }
  ],
  "route": {
    "rules": [
      {
        "inbound": "tun_main",
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "ip_is_private": true,
        "outbound": "direct_out"
      },
      {
        "rule_set": "china_ip_cidr",
        "outbound": "direct_out"
      }
    ],
    "rule_set": [
      {
        "tag": "china_ip_cidr",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geoip/rule-set/geoip-cn.srs",
        "download_detour": "proxy_out",
        "update_interval": "1d"
      }
    ],
    "final": "proxy_out",
    "auto_detect_interface": true
  }
}
